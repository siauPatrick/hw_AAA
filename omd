import random

x = random.randint(1,18)
y = random.randint(1,6)

dict_emoji = {1: 'üê∂',
             2:'üê±',
             3:'ü¶ê',
             4:'üêπ',
             5:'ü¶ë',
             6:'üêª',
             7:'ü¶ï',
             8:'üêº',
             9:'ü¶Ñ',
             10:'üêØ',
             11:'ü¶Å',
             12:'üê∑',
             13:'ü¶ü',
             14:'üê∏',
             15:'üêµ',
             16:'ü¶ä',
             17:'üêô',
             18:'ü¶†'}
dict_name = {1: '–ü—ë—Å',
             2:'–ö–æ—Ç',
             3:'–ö—Ä–µ–≤–µ—Ç',
             4:'–•–æ–º—è–∫',
             5:'–ö–∞–ª—å–º–∞—Ä',
             6:'–ú–µ–¥–≤–µ–¥—å',
             7:'–ó–∞—É—Ä–æ–ø–æ–¥',
             8:'–ü–∞–Ω–¥–∞',
             9:'–ï–¥–∏–Ω–æ—Ä–æ–≥',
             10:'–¢–∏–≥—Ä',
             11:'–õ–µ–≤',
             12:'–ö–æ–º–∞—Ä',
             13:'–°–≤–∏–Ω',
             14:'–ñ–∞–±',
             15:'–û–±–µ–∑—å—è–Ω',
             16:'–õ–∏—Å',
             17:'–û—Å—å–º–∏–Ω–æ–≥',
             18:'–í–∏—Ä—É—Å'}
dict_job = {1:'—ç–∫–æ–Ω–æ–º–∏—Å—Ç',
            2:'–∞–Ω–∞–ª–∏—Ç–∏–∫',
            3:'—Ñ–∏–Ω–∞–Ω—Å–∏—Å—Ç',
            4:'Data —Å–∞–π–µ–Ω—Ç–∏—Å—Ç',
            5:'Data –∏–Ω–∂–µ–Ω–µ—Ä',
            6:'ML –∏–Ω–∂–µ–Ω–µ—Ä',
            7:'BI-—Å–ø–µ—Ü–∏–∞–ª–∏—Å—Ç'}

def step1():
    print(
        '–ü–æ—Å–ª–µ —Ç—è–∂–µ–ª–æ–≥–æ –¥–Ω—è',dict_name[x], dict_job[y], dict_emoji[x],'—Ä–µ—à–∏–ª –∑–∞–π—Ç–∏ –≤—ã–ø–∏—Ç—å –≤ –±–∞—Ä. '
        '–í–∑—è—Ç—å –µ–º—É',dict_emoji[x],'–∑–æ–Ω—Ç–∏–∫ ‚òÇÔ∏è?'
    )
    option = ''
    options = {'–¥–∞': True, '–Ω–µ—Ç': False}
    while option not in options:
        print('–í—ã–±–µ—Ä–∏—Ç–µ: {}/{}'.format(*options))
        option = input()
    
    if options[option]:
        return step2_umbrella()
    return step2_no_umbrella()


def step2_umbrella():
    weather = random.randint(0,1)
    if weather == 0:
        print()
        print(dict_emoji[x],'‚òÇÔ∏è')
        print()
        print('–î–æ–∂–¥—è –Ω–µ—Ç, –≤—ã –∑—Ä—è –≤–∑—è–ª–∏ –∑–æ–Ω—Ç ‚òÇÔ∏è.')
    else:
        print()
        print(dict_emoji[x],'‚òî')
        print()
        print(
            '–ü–æ—à–µ–ª –¥–æ–∂–¥—å üåß, –≤—ã –Ω–µ –∑—Ä—è –≤–∑—è–ª–∏ –∑–æ–Ω—Ç ‚òî.'
        )
    print()
    print(
        dict_name[x], dict_job[y], dict_emoji[x],' –ø—Ä–∏—à–µ–ª –≤ –±–∞—Ä.',
        '–í–∑—è—Ç—å –µ–º—É –≤—ã–ø–∏—Ç—å üç∫?'
    )
    option = ''
    options = {'–¥–∞': True, '–Ω–µ—Ç': False}
    while option not in options:
        print('–í—ã–±–µ—Ä–∏—Ç–µ: {}/{}'.format(*options))
        option = input()
    
    if options[option]:
        return step3_drink()
    return step3_no_drink()

def step3_drink():
    print(' ')
    print(dict_name[x], dict_job[y], dict_emoji[x],' –≤—Å–µ –≤—ã–ø–∏–ª  üçª.')
    print(' ')
    print('–í–∑—è—Ç—å –ª–∏ –µ–º—É',dict_emoji[x],'–µ—â–µ –≤—ã–ø–∏—Ç—å üç∫ –∏–ª–∏ –ø–æ–π—Ç–∏ –¥–æ–º–æ–π —Å–ø–∞—Ç—å üè†?')
    option = ''
    options = {'–≤–∑—è—Ç—å –≤—ã–ø–∏—Ç—å': True, '–ø–æ–π—Ç–∏ –¥–æ–º–æ–π': False}
    while option not in options:
        print('–í—ã–±–µ—Ä–∏—Ç–µ: {}/{}'.format(*options))
        option = input()
    
    if options[option]:
        return step3_drink()
    print()
    print('–ù–∞ —Å–ª–µ–¥—É—é—â–∏–π –¥–µ–Ω—å',dict_name[x], dict_job[y], dict_emoji[x],
          ' —É–∂–∞—Å–Ω–æ –ø–æ—Ä–∞–±–æ—Ç–∞–ª (–ø—Ä–æ—à–ª—ã–π –≤–µ—á–µ—Ä –¥–∞–ª –æ —Å–µ–±–µ –∑–Ω–∞—Ç—å).')
    print()
    return step1()

def step3_no_drink():
    print(' ')
    print(dict_name[x], dict_job[y], dict_emoji[x],' –Ω–∏—á–µ–≥–æ –Ω–µ –≤—ã–ø–∏–ª.')
    print(' ')
    print('–ú–æ–∂–µ—Ç –≤–∑—è—Ç—å –µ–º—É',dict_emoji[x],'–≤—ã–ø–∏—Ç—å üç∫ –∏–ª–∏ –ø—Ä–æ—Å—Ç–æ —Å–∏–¥–µ—Ç—å?')
    option = ''
    options = {'–≤–∑—è—Ç—å –≤—ã–ø–∏—Ç—å': True, '–ø—Ä–æ—Å—Ç–æ —Å–∏–¥–µ—Ç—å': False}
    while option not in options:
        print('–í—ã–±–µ—Ä–∏—Ç–µ: {}/{}'.format(*options))
        option = input()
    
    if options[option]:
        return step3_drink()
    return step3_no_drink()

def step2_no_umbrella():
    weather = random.randint(0,1)
    if weather == 0:
        print()
        print(dict_emoji[x])
        print()
        print('–î–æ–∂–¥—è –Ω–µ—Ç, –≤—ã –Ω–µ –∑—Ä—è –Ω–µ –≤–∑—è–ª–∏ –∑–æ–Ω—Ç ‚òÇÔ∏è.')
        print()
        print(
            dict_name[x], dict_job[y], dict_emoji[x],' –ø—Ä–∏—à–µ–ª –≤ –±–∞—Ä.',
            '–í–∑—è—Ç—å –µ–º—É –≤—ã–ø–∏—Ç—å üç∫?'
        )
        option = ''
        options = {'–¥–∞': True, '–Ω–µ—Ç': False}
        while option not in options:
            print('–í—ã–±–µ—Ä–∏—Ç–µ: {}/{}'.format(*options))
            option = input()

        if options[option]:
            return step3_drink()
        return step3_no_drink()
    else:
        print()
        print(dict_emoji[x],'üåß')
        print()
        print(
            '–ü–æ—à–µ–ª –¥–æ–∂–¥—å üåß, –≤—ã –∑—Ä—è –Ω–µ –≤–∑—è–ª–∏ –∑–æ–Ω—Ç ‚òî.'
            '–ü—Ä–∏–¥–µ—Ç—Å—è –≤–æ–∑–≤—Ä–∞—â–∞—Ç—å—Å—è –¥–æ–º–æ–π üè† –∏ –∏–¥—Ç–∏ –≤ –±–∞—Ä –Ω–∞ —Å–ª–µ–¥—É—é—â–∏–π –¥–µ–Ω—å.'
        )
        print()
        print('–ù–∞ —Å–ª–µ–¥—É—é—â–∏–π –¥–µ–Ω—å', dict_name[x], dict_job[y], dict_emoji[x],'–æ—Ç–ª–∏—á–Ω–æ –ø–æ—Ä–∞–±–æ—Ç–∞–ª.')
        print()
        return step1()
        

if __name__ == '__main__':
    step1()
